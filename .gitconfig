[core]
  editor = vim
  excludesFile = ~/.gitignore

[alias]
  st = status -s
  lgo = log --oneline
[init]
  defaultBranch = main
[url "git@github.com:"]
  pushInsteadOf = "https://github.com/"
[merge]
  tool = meld
  conflictstyle = zdiff3
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[commit]
	gpgsign = true
[tag]
	gpgsign = true
[trailer "co-author"]
	key = "Co-authored-by"
[trailer "resolves"]
	key = "Resolves"
[trailer "fixes"]
	key = "Fixes"
